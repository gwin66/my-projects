import random
import string

def generate_password(length=12, use_digits=True, use_specials=True):
    chars = string.ascii_letters  # букви
    if use_digits:
        chars += string.digits
    if use_specials:
        chars += string.punctuation
    
    password = ''.join(random.choice(chars) for _ in range(length))
    return password

# --- Головна програма ---
print("  Генератор паролів")

# Довжина пароля
length = int(input("Введи довжину пароля: "))

# Чи включати цифри
use_digits = input("Включати цифри? (y/n): ").lower() == "y"

# Чи включати спецсимволи
use_specials = input("Включати спецсимволи? (y/n): ").lower() == "y"

# Генеруємо пароль
password = generate_password(length, use_digits, use_specials)

print("\n Твій пароль:", password)
